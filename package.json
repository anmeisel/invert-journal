{
  "name": "invert-journal",
  "version": "0.1.0",
  "description": "invert journal website",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node index.js"
  },
  "engines": {
    "node": "10.x",
    "npm": "6.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anmeisel/invert-journal.git"
  },
  "author": "4 us & 4 others",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anmeisel/invert-journal/issues"
  },
  "homepage": "https://github.com/anmeisel/invert-journal#readme",
  "dependencies": {
    "are.na": "^0.1.3",
    "compression": "^1.7.4",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "js-yaml": "^3.13.1",
    "mustache": "^3.1.0",
    "mustache-express": "^1.3.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "grunt": "^1.0.4",
    "grunt-concurrent": "^3.0.0",
    "grunt-contrib-compass": "^1.1.1",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-nodemon": "^0.4.2",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,html,env"
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": [
          "index.js",
          "*.js"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "semi": false,
          "singleQuote": true
        }
      },
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "html",
          "htmlWhitespaceSensitivity": "strict"
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "parser": "json"
        }
      }
    ]
  },
  "prettierIgnore": [
    "js/vendor*",
    "*.min.js",
    "*.css",
    "assets*",
    "fonts*"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "array-bracket-spacing": [
        0,
        "always",
        {
          "objectsInArrays": false
        }
      ],
      "func-names": "off",
      "no-console": [
        "warn"
      ],
      "no-underscore-dangle": [
        "allow"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "prettier/prettier": [
        "warn"
      ]
    }
  },
  "eslintIgnore": [
    "js/vendor*",
    "assets*",
    "fonts*",
    "Gruntfile.js"
  ]
}
